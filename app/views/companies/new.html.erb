<h1 class="form-title">カオスマップ投稿フォーム</h1>

<div class="post-form">
<h2 class="post-type">データを1つずつ投稿</h2>
<%= form_for @company do |f| %>

  <h3>企業名</h3>
  　<%= f.text_field :company_name %>
  <h3>ロゴイメージ</h3>
  	<%= f.attachment_field :company_image %>
  <h3>カテゴリ（小）</h3>
  	<%= f.collection_select(:small_category_id, @smallcategories, :id, :small_category_name) %>

  <%= f.submit "送信" %>
<% end %>

</div>

<p class="link-to-index"><%= link_to("企業一覧", companies_path) %></p>
<p class="link-to-index"><%= link_to("カテゴリ追加", companies_path) %></p>